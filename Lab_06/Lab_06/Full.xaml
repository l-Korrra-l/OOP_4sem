<Window x:Class="Lab_06.Full"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Lab_06"
        mc:Ignorable="d"
        Title="Full" Height="450" Width="500" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="383*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="GridPrin" Grid.Row="1"/>
        <Grid Grid.Row="0" Style="{DynamicResource GridTopBar}" Grid.ColumnSpan="3"  />
        <StackPanel Grid.Row="0"  Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 0">
            <Button x:Name="ExitMain" Width="30" Height="30" Padding="0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF262323" Click="ExitMain_Click">
                    <materialDesign:PackIcon Kind="Close"></materialDesign:PackIcon>
                </Button>
            </StackPanel>

    </Grid>
</Window>
